############################################# -->

{{#each randomBeerFromApi}}
  <div class='random-beer d-flex'>
    <div><img src='{{image_url}}' alt='{{name}}' /></div>
    <div>
      <h3>{{name}}</h3>
      <p>{{tagline}}</p>
      <p>{{description}}</p>
      <h6>Food Pairing</h6>
      <ul>
        {{#each food_pairing}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
      <p><strong>Brewers Tips:</strong> {{brewers_tips}}</p>
    </div>
  </div>
{{/each}}
